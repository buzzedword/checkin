# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = true

[*.yml]
indent_size = 2

[{package.json,.eslintrc,.babelrc}]
indent_size = 2
