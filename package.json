{
  "name": "checkin",
  "version": "0.1.0",
  "description": "Conference checkin server+app with support for printing name badges",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcousineau/checkin.git"
  },
  "private": true,
  "scripts": {
    "watch:js": "webpack-dev-server --config ./webpack.config.dev.js",
    "watch:server": "nodemon --watch ./src/server --watch ./src/common server.js",
    "start": "concurrently --kill-others \"yarn run watch:server\" \"yarn run watch:js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:prod": "webpack --optimize-minimize --progress --config ./webpack.config.prod.js",
    "start:prod": "sudo NODE_ENV=production node server.js",
    "prod": "yarn run build:prod && yarn run start:prod",
    "prettier": "prettier --write ./src/**/*.js ./server.js",
    "precommit": "lint-staged",
    "lint": "eslint ./src/**/*.js ./server.js"
  },
  "keywords": [
    "conference",
    "checkin"
  ],
  "author": "Daniel Cousineau",
  "license": "GPL-2.0",
  "dependencies": {
    "body-parser": "^1.15.0",
    "canvas": "^1.6.5",
    "csv": "^1.1.1",
    "eslint-config-prettier": "^1.7.0",
    "eslint-plugin-prettier": "^2.0.1",
    "express": "^4.13.4",
    "history": "^4.6.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.7.0",
    "material-ui": "^0.17.4",
    "multer": "^1.1.0",
    "nedb": "^1.8.0",
    "nunjucks": "^3.0.0",
    "parrotsay-api": "^0.1.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.3.1",
    "redux-saga": "^0.14.7",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-eslint": "6",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-modern-node": "^3.2.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.6.5",
    "bundle-loader": "^0.5.5",
    "concurrently": "^3.4.0",
    "eslint": "^3.19.0",
    "husky": "^0.13.3",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.4.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.2.2",
    "react-hot-loader": "next",
    "source-map-support": "^0.4.0",
    "webpack": "^2.4.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-stats-plugin": "^0.1.5"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
